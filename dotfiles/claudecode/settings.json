{
	"env": {
		"CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
	},
	"permissions": {
		"allow": [
			"Read(./**)",
			"Search(./**)",
			"Edit(./**)",
			"MultiEdit(./**)",
			"Write(./**)",
			"WebFetch",
			"WebSearch"
		],
		"deny": ["Bash(rm -rf:*)", "Bash(rm:*)", "Bash(rm -rf /)"],
		"ask": ["Bash(git:*)", "Bash(gh:*)", "Bash(curl:*)", "Bash(sudo:*)"],
		"defaultMode": "acceptEdits"
	},
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Task|Bash|Glob|Grep|Read|Edit|MultiEdit|Write|TodoWrite|WebFetch|WebSearch|NotebookEdit|BashOutput|ExitPlanMode|KillShell|SlashCommand",
				"hooks": [
					{
						"type": "command",
						"command": "$HOME/.config/nixos/scripts_as_dotfiles/claudecode/hooks.py"
					}
				]
			}
		],
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "$HOME/.config/nixos/scripts_as_dotfiles/claudecode/hooks.py"
					}
				]
			}
		]
	},
	"forceLoginMethod": "claudeai",
	"alwaysThinkingEnabled": true
}
